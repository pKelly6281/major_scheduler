<<h1>Add a major</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">  
	<%= form_for (@major) do |f| %>
		<%= render 'shared/error_messages_major'%>

		<%= f.label :name,'Name of the major' %>
		<%= f.text_field :name, class: 'form-control' %>
		<%= f.submit "Create my account", class:"btn btn-primary" %>
    	<% end %>
  </div>
</div>
